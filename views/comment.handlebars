<div class="card mb-3">
  <div class="card-header">
    {{title}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-1">
      <p>{{text}}</p>
      <footer class="blockquote-footer">{{username}}</footer>
    </blockquote>
  </div>
</div>

<form class="edit-post">
  <div class="form-group">
    <label for="add-comment">add Comment</label>
    <textarea class="form-control" id="add-comment" rows="3"></textarea>
  </div>
</form>
<button type="submit" class="btn btn-primary" id="submit-comment">Add Comment</button>