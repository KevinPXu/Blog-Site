<form class="edit-post">
  <div class="form-group">
    <label for="post-title">Title</label>
    <input
      type="text"
      class="form-control"
      id="editPost-title"
      value="{{post.title}}"
    />
  </div>
  <div class="form-group">
    <label for="post-text">Post Content</label>
    <textarea
      class="form-control"
      id="editPost-text"
      rows="3"
    >{{post.text}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="submit-post">Edit Post</button>
  <button type="submit" class="btn btn-primary" id="delete-post">Delete Post</button>
</form>

<script src="/js/editPost.js"></script>