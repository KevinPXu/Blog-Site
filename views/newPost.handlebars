<form class="new-post">
  <div class="form-group">
    <label for="post-text">Title</label>
    <input
      type="text"
      class="form-control"
      id="post-title"
      placeholder="Title of Post"
    />
  </div>
  <div class="form-group">
    <label for="post-text">Post Content</label>
    <textarea class="form-control" id="post-text" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="submit-post">Submit Post</button>
</form>